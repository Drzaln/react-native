{
  "name": "ReactNativeTDD",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "mocha --require @babel/register --require tests/setup.js tests/**/*.spec.js"
  },
  "dependencies": {
    "react": "16.4.1",
    "react-native": "0.56.1"
  },
  "devDependencies": {
    "@jonny/react-native-mock": "^0.4.2",
    "babel-preset-react-native": "^5",
    "chai": "^4.1.2",
    "detox": "^9.0.1",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "mocha": "^5.2.0",
    "react-test-renderer": "16.4.1",
    "sinon": "^6.3.3",
    "sinon-chai": "^3.2.0"
  },
  "detox": {
    "test-runner": "mocha",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/ReactNativeTDD.app",
        "build": "xcodebuild -project ios/ReactNativeTDD.xcodeproj -scheme ReactNativeTDD -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    }
  }
}
